<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title></title>
    <link rel="stylesheet" type="text/css" href="/static/css/reset.css"/>
    <link rel="stylesheet" type="text/css" href="/static/css/fonts.css"/>
    <link rel="stylesheet/less" type="text/css" href="/static/less/invoice.less"/>
    <link rel="stylesheet/less" type="text/css" href="/static/less/invoice-statements.less"/>
    <script type="text/javascript">
        less = {
            env      : "development", // or "production"
            async    : false,       // load imports async
            fileAsync: false   // load imports async when in a page under
        };
    </script>
    <script src="/static/js/less-1.3.3.min.js" type="text/javascript"></script>
</head>
<body>
<div id="page">
    <div id="customer">
        {% block customer_address %}
            <address>
                <strong>{{ Customer.CompanyName }}</strong><br/>
                {{ Customer.Adress1 }}<br/>
                {% if (Customer.Adress2 != '') %}
                    {{ Customer.Adress2 }}<br/>
                {% endif %}
                {{ Customer.PostalCode }} {{ Customer.City }}<br/>
                {{ Customer.Country }}
            </address>
        {% endblock %}
        {% block customer_details %}
            <dl class="details">
                <dt>{% trans "Votre Code Client" %}</dt>
                <dd>{{ Customer.CustomerCode }}</dd>
                <dt>{% trans "Numero TVA Intracom." %}</dt>
                <dd>{{ Customer.VATId }}</dd>
            </dl>
        {% endblock %}
    </div>
    <div id="main">
        <h1>Relevé de factures {{ Month }}/{{ Year }}</h1>
        <table id="table">
            <thead>
            <tr>
                <th>Numéro</th>
                <th>Référence</th>
                <th>Date</th>
                <th>Montant HT</th>
                <th>Montant TVA</th>
                <th>Montant TTC</th>
            </tr>
            </thead>
            <tbody>
            {% for i, Line in Lines %}
                <tr>
                    <td>{{ Line.InvoiceNumber }}</td>
                    <td>{{ Line.Reference }}</td>
                    <td class="date">{{ Line.InvoiceDate|date('d/m/Y') }}</td>
                    <td class="money">{{ Line.ETAmount|number_format(2, ',', ' ') }}<span class="currency">&euro;</span>
                    </td>
                    <td class="money">{{ Line.VATAmount|number_format(2, ',', ' ') }}<span
                                class="currency">&euro;</span></td>
                    <td class="money">{{ Line.ATIAmount|number_format(2, ',', ' ') }}<span
                                class="currency">&euro;</span></td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="3"></td>
                <td>{{ Sums.et|number_format(2, ',', ' ') }}<span class="currency">&euro;</span></td>
                <td>{{ Sums.vat|number_format(2, ',', ' ') }}<span class="currency">&euro;</span></td>
                <td>{{ Sums.ati|number_format(2, ',', ' ') }}<span class="currency">&euro;</span></td>
            </tr>
            </tfoot>
        </table>
    </div>
</div>
</body>
</html>